{
  "name": "my-new-app",
  "productName": "my-new-app",
  "version": "1.0.0",
  "description": "My Electron application description.",
  "main": "dist/main/main.js",
  "scripts": {
    "dist": "( if exist .\\dist\\ rd .\\dist\\ /s /q ) && tsc && tsc --project .\\src\\main\\tsc.cjs.json && ejs -p [ -c ] -w .\\src\\index.ejs -o .\\dist\\index.html && sass src\\:dist\\ --style=compressed",
    "start": "npm run dist && .\\node_modules\\electron\\dist\\electron.exe .",
    "build": "npm run dist && ( if exist .\\out\\ rd .\\out\\ /s /q ) && electron-builder build --win"
  },
  "repository": "https://github.com/bvandevliet/electron-boilerplate",
  "keywords": [],
  "author": {
    "name": "Bob Vandevliet",
    "email": "info@bvandevliet.nl"
  },
  "license": "MIT",
  "build": {
    "productName": "my-new-app",
    "appId": "com.electron.my-new-app",
    "copyright": "Copyright Â© 2022 Bob Vandevliet",
    "directories": {
      "output": "./out"
    },
    "win": {
      "target": "nsis",
      "icon": "./src/assets/img/favicon.ico",
      "publisherName": "Bob Vandevliet"
    },
    "nsis": {
      "createDesktopShortcut": false,
      "createStartMenuShortcut": false
    },
    "files": [
      "!**/*.ejs",
      "!dist/**/*.js.map",
      "!dist/**/*.css.map",
      "!src/**/*.ts",
      "!src/**/*.css",
      "!src/**/*.scss",
      "!types/",
      "!**/tsconfig.json",
      "!**/tsc.*.json",
      "!**/.eslintrc.json",
      "!**/.gitignore",
      "!**/.editorconfig"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "ejs": "^3.1.6",
    "electron": "^16.0.7",
    "electron-builder": "^22.14.5",
    "eslint": "^8.7.0",
    "eslint-plugin-import": "^2.25.4",
    "sass": "^1.49.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {}
}
